# --------------------------------------

DATABASE_NAME: shop_flipmart_ecommerce

# --------------------------------------

Table Users {
    user_id int [pk]
    username varchar
    password varchar
    email varchar
    full_name varchar
    avatar_path varchar
    // status enum('active, inactive')
    created_at TIMESTAMP
    updated_at TIMESTAMP
  }
  
  
  // Sản phẩm: ------------
  Table Products {
    product_id int [pk]
    name varchar
    description varchar
    price decimal
    discount_price decimal
    brand_id int
    is_hot boolean
    is_new boolean
    // status enum('active, inactive')
    created_at TIMESTAMP
    updated_at TIMESTAMP
  }
  
  
  // Danh mục: ------------
  Table Categories {
    category_id int [pk]
    name varchar
    parent_id int
    created_at TIMESTAMP
    updated_at TIMESTAMP
  }
  Table ProductCategories {
    product_id int [ref: - Products.product_id]
    category_id int [ref: - Categories.category_id]
  }
  
  
  // Thương hiệu: ------------
  Table Brands {
    brand_id int [pk]
    name varchar
    created_at TIMESTAMP
    updated_at TIMESTAMP
  }
  
  
  // Màu SP: ------------
  Table Colors {
    color_id int [pk]
    name varchar
    hex_value varchar
  }
  Table ProductColors {
    product_id int [ref: - Products.product_id]
    color_id int [ref: - Colors.color_id]
  }
  
  
  // Ảnh Sản phẩm: ------------
  Table ProductImages {
    image_id int [pk]
    product_id int [ref: - Products.product_id]
    image_path varchar
    is_primary boolean
  }
  
  
  // Đánh giá SP: ------------
  Table Reviews {
    review_id int [pk]
    product_id int [ref: - Products.product_id]
    user_id int [ref: - Users.user_id]
    rating int
    comment varchar
    // status enum('active, inactive')
    created_at TIMESTAMP
    updated_at TIMESTAMP
  }
  
